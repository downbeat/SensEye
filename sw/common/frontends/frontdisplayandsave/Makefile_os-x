# 2015-01-31: Modified for OS X.

NAME=frontdisplayandsave

CC=gcc
CFLAGS=-O2 -Wall -g


OPENCV_INC=/opt/local/include/opencv
OPENCV_LIBDIR=/opt/local/lib
OPENCV_LIBS=-lopencv_core -lopencv_highgui -lopencv_imgproc

LIBGLASSES_INC=../../../libglasses
LIBGLASSES_SRC=$(LIBGLASSES_INC)/glasses.c

# Russ [2015-01-31]: Added /opt/local/incude for MacPorts intalls (OS X).
INC=-I$(OPENCV_INC) -I$(LIBGLASSES_INC) -I/opt/local/include/
SRC=$(NAME).c $(LIBGLASSES_SRC)
BIN=$(NAME)

LIBS=-L$(OPENCV_LIBDIR) $(OPENCV_LIBS)


all:	$(NAME)

$(NAME):	$(SRC)
	$(CC) $(CFLAGS) $(INC) $(SRC) $(LIBS) -o $(BIN)

clean:
	rm -f $(BIN)
	rm -rf $(BIN).dSYM

